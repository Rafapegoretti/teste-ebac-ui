pipeline {
    agent any

    stages {
        stage('Clonar repositÃ³rio') {
            steps {
                git branch: 'master', url: 'https://github.com/Rafapegoretti/teste-ebac-ui.git'
            }
        }
        
        stage('Instalar dependencias') {
            steps {
                bat 'npm install'
            }
